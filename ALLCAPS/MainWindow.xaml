<Window x:Class="ALLCAPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALLCAPS" d:DataContext="{d:DesignInstance Type=local:ObservableSpeechResult}"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="ALLCAPS 🐱‍🐉" Height="140" Width="900"
        MouseRightButtonUp="LaunchSettings"
        MouseDown="Window_MouseDown"
        MouseUp="Window_MouseUp"
        MouseMove="Window_MouseMove"
        Deactivated="Window_Deactivated">
    <Window.Background>
        <SolidColorBrush Opacity="0.75" Color="Black" />
    </Window.Background>
    <Window.Clip>
        <RectangleGeometry Rect="0,0,900,140" RadiusX="10" RadiusY="10" />
    </Window.Clip>
    <Grid>
        <TextBlock Padding="20 20 20 20" FontSize="20" Text="{Binding Text}" TextWrapping="WrapWithOverflow">
            <TextBlock.Foreground>
                <SolidColorBrush Color="GreenYellow" />
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</Window>
