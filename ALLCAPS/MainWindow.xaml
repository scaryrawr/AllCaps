<Window x:Class="ALLCAPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALLCAPS"
        mc:Ignorable="d"
        Title="ALLCAPS 🐱‍🐉"
        Height="200"
        Width="800"
        WindowStyle="None"
        Background="Transparent">
    <Border CornerRadius="8">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity=".8" />
        </Border.Background>
        <TextBlock FontSize="20" Foreground="White" Margin="20 0 0 0" x:Name="Speech" TextWrapping="WrapWithOverflow" />
    </Border>
</Window>
